<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/rl_act_guide_iv_start"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >
        <ImageView
            android:id="@+id/act_guide_iv_default"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/defoult_logo"
            />
        <ImageView
            android:id="@+id/act_guide_iv_start"
            android:layout_width="match_parent"
            android:layout_height="550dp"
            android:background="@drawable/guide_pic"
            />
        <TextView
            android:id="@+id/act_guide_cpv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="25dp"
            android:layout_marginTop="15dp"
            android:textSize="15sp"
            android:background="@drawable/bg_start_page_circle"
            />
    </RelativeLayout>

    <cn.bingoogolapple.bgabanner.BGABanner
        android:id="@+id/banner_guide_content"
        style="@style/MatchMatch"
        app:banner_pageChangeDuration="1000"
        app:banner_pointAutoPlayAble="false"
        app:banner_isNumberIndicator="false"
        app:banner_pointDrawable="@android:color/transparent"
        app:banner_pointContainerBackground="@android:color/transparent"
        app:banner_transitionEffect="alpha" />
</LinearLayout>
