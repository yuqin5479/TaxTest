<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:contentDescription="忘记密码"
    android:orientation="vertical">

    <include
        android:id="@+id/in_head_forget"
        layout="@layout/head_title" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="手机号"
                android:textColor="@color/text_gray"
                android:textSize="16sp" />

            <com.ruihua.geshuibao.CustomWidget.ClearEditText
                android:id="@+id/et_phone_forget"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="请输入手机号"
                android:inputType="phone"
                android:maxLines="1"
                android:textColorHint="#999999"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="#afafaf" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_strverification_forget"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="验证码"
                android:textColor="@color/text_gray"
                android:textSize="15sp" />

            <com.ruihua.geshuibao.CustomWidget.ClearEditText
                android:id="@+id/et_verification_forget"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@null"
                android:hint="请输入验证码"
                android:inputType="number"
                android:maxLength="6"
                android:maxLines="1"
                android:textColorHint="#999999"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_getverification_forget"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="获取验证码"
                android:textColor="#00a3eb"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="#afafaf" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <TextView
                android:id="@+id/tv_strpassword_forget"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="输入新密码"
                android:textColor="@color/text_gray"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/image_isshow_forget"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/deye_hui" />

            <com.ruihua.geshuibao.CustomWidget.ClearEditText
                android:id="@+id/et_password_forget"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tv_strpassword_forget"
                android:background="@null"
                android:hint="请输入六位密码"
                android:inputType="textPassword"
                android:maxLines="1"
                android:paddingBottom="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:textColorHint="#999999"
                android:textSize="15sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="#afafaf" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <TextView
                android:id="@+id/tv_strensurepassword_forget"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="确认新密码"
                android:textColor="@color/text_gray"
                android:textSize="15sp" />

            <com.ruihua.geshuibao.CustomWidget.ClearEditText
                android:id="@+id/et_ensurepassword_forget"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tv_strensurepassword_forget"
                android:background="@null"
                android:hint="请再次输入密码"
                android:inputType="textPassword"
                android:maxLines="1"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:textColorHint="#999999"
                android:textSize="15sp" />W
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_commit_forget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/roundrect_blue"
        android:gravity="center"
        android:padding="10dp"
        android:text="提 交"
        android:textColor="@color/white1"
        android:textSize="18sp" />
</LinearLayout>
