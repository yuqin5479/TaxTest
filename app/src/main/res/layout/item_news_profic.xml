<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">



        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="84dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="6"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title_item_news_profic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:maxLines="2"
                android:text="发改委：统一公共资源交易数据规范助力“平台建起来、系统联系起来数据用起来"
                android:textColor="@color/black_text"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/tv_date_item_news_profic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="21016-09-18"
                android:textColor="@color/text_color_ninefour"
                android:textSize="12sp" />
        </RelativeLayout>
        <ImageView
            android:id="@+id/iv_item_news_profic"
            android:layout_width="0dp"
            android:layout_height="84dp"
            android:layout_weight="3"
            android:src="@drawable/m_declare"
            android:scaleType="fitXY" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_gravity="bottom"
        android:background="#e6e6e6" />
</LinearLayout>