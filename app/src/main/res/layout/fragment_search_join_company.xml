<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <ImageView
            android:id="@+id/iv_back"
            android:src="@mipmap/nav_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="center"
            android:layout_marginLeft="10dp"
            />
        <com.ruihua.geshuibao.CustomWidget.ClearEditText
            android:id="@+id/ev_search_company"
            android:layout_width="wrap_content"
            android:layout_height="35dip"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_editview"
            android:hint="请输入单位名称"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:drawablePadding="5dp"
            android:maxLength="32"
            android:maxLines="1"
            android:drawableLeft="@drawable/ic_join_search_gray"
            android:textColorHint="@color/gray_light"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/tv_search_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="搜索"
            android:layout_marginRight="20dp"
            android:textSize="15sp"
            android:textColor="@color/main_color"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:background="#e6e6e6" />
    <ListView
        android:id="@+id/lv_company_names"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
    />
</LinearLayout>
