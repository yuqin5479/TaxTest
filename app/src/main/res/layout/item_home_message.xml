<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/transparent">
        <RelativeLayout
            android:id="@+id/item_home_rl_msg"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            >
                <TextView
                    android:id="@+id/home_tv_msg_text"
                    android:text="@string/home_revenue_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:textSize="15sp"
                    android:textColor="@color/home_msg_text"
                    />
                <TextView
                    android:id="@+id/home_tv_msg_more"
                    android:drawableRight="@drawable/m_right"
                    android:drawablePadding="3dp"
                    android:text="@string/home_msg_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_type_gray"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="15dp"
                    />
                <View
                    android:id="@+id/msg_view"
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:background="@color/gray_light"
                    android:layout_below="@id/home_tv_msg_text"
                    android:layout_marginTop="10dp"
                    />
                <TextView
                    android:id="@+id/home_tv_msg_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/main_text_color"
                    android:text="关于《国家税务局关于税务机构改革有关事项的公告》"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="20dp"
                    android:textSize="15sp"
                    android:layout_below="@id/msg_view"
                    android:layout_marginTop="15dp"
                    />
                <ImageView
                    android:id="@+id/home_iv_msg_title_hint"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_alignBaseline="@+id/home_tv_msg_title"
                    android:layout_marginStart="15dp"
                    android:src="@drawable/ease_unread_dot" />
                <TextView
                    android:id="@+id/home_tv_msg_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_type_gray"
                    android:text="2018-10-08 16:18:20"
                    android:layout_below="@id/home_tv_msg_title"
                    android:layout_alignLeft="@id/home_tv_msg_title"
                    android:layout_marginTop="10dp"
                    />
        </RelativeLayout>
</LinearLayout>
