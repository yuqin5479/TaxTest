<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/white"
    >
    <!--专项附加扣除 住房租金、住房贷款公积金利息两个特殊 item-->
    <CheckBox
        android:id="@+id/cb_housing"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        style="@style/CustomCheckBoxTheme"
        />
    <ImageView
        android:id="@+id/iv_icon_housing"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/d_deduction_1"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/cb_housing"
        android:layout_marginLeft="12dp"
        />

    <TextView
        android:id="@+id/tv_deducion_housing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="子女教育"
        android:textSize="16sp"
        android:textColor="@color/main_text_color"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/iv_icon_housing"
        android:layout_marginLeft="10dp"
        />
    <TextView
        android:id="@+id/tv_sum_housing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="￥200"
        android:layout_marginRight="45dp"
        android:textSize="14sp"
        android:textColor="@color/gray_text_zqsb"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        />
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/m_right"
        android:layout_marginRight="15dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_light"
        android:layout_alignLeft="@id/cb_housing"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>
