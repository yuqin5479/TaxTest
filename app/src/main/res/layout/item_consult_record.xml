<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:id="@+id/tv_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2018-11-11 11:11:00"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15sp"
            android:textColor="@color/gray_text"
            />
        <TextView
            android:id="@+id/tv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_data"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:text="已回复"
            android:textColor="@color/gray_text"
            />
        <TextView
            android:id="@+id/tv_msg"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black_text"
            android:text="转账登记为小规模纳税人后，原来开具的发票错误怎么处理？"
            android:textSize="15sp"
            android:layout_below="@+id/tv_data"
            android:layout_alignLeft="@+id/tv_data"
            android:layout_marginTop="10dp"
            />
        <View
            android:id="@+id/v_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#e6e6e6"
            android:layout_below="@+id/tv_msg"
            android:layout_alignLeft="@+id/tv_data"
            android:layout_marginTop="10dp"
            />
        <ImageView
            android:id="@+id/iv_head"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignLeft="@+id/tv_data"
            android:layout_below="@+id/v_line"
            android:src="@drawable/home_header"
            android:layout_marginTop="6dp"
            />
        <TextView
            android:id="@+id/tv_serves_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_text"
            android:textSize="15sp"
            android:text="平台客服"
            android:layout_toRightOf="@+id/iv_head"
            android:layout_alignTop="@+id/iv_head"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="15dp"
            />
    </RelativeLayout>
</LinearLayout>
