<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_gray"
    >
    <include
        layout="@layout/head_title" />
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/mycompany_srl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:id="@+id/rl_labor_contract_company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginTop="10dp"
                >
                <View
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="15dp"
                    android:id="@+id/v_labor_contract_company_blue"
                    android:layout_width="4dp"
                    android:layout_height="20dp"
                    android:background="@color/main_color"
                    />
                <TextView
                    android:id="@+id/tv_labor_contract_company_type"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="劳动合同单位"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical"
                    android:layout_toRightOf="@+id/v_labor_contract_company_blue"
                    android:layout_alignTop="@+id/v_labor_contract_company_blue"
                    android:textColor="@color/gray_text"
                    android:textSize="12sp"
                    />
                <View
                    android:id="@+id/v_labor_contract_company_gray"
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:background="@color/gray_light"
                    android:layout_below="@id/v_labor_contract_company_blue"
                    android:layout_marginTop="10dp"
                    />
                <ListView
                    android:id="@+id/lv_labor_contract_company_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/v_labor_contract_company_gray"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_salaried_company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginTop="10dp"
                >
                <View
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="15dp"
                    android:id="@+id/v_salaried_blue"
                    android:layout_width="4dp"
                    android:layout_height="20dp"
                    android:background="@color/main_color"
                    />
                <TextView
                    android:id="@+id/tv_salaried_company_type"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="授薪单位"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical"
                    android:layout_toRightOf="@+id/v_salaried_blue"
                    android:layout_alignTop="@+id/v_salaried_blue"
                    android:textColor="@color/gray_text"
                    android:textSize="12sp"
                    />
                <View
                    android:id="@+id/v_salaried_gray"
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:background="@color/gray_light"
                    android:layout_below="@id/v_salaried_blue"
                    android:layout_marginTop="10dp"
                    />
                <ListView
                    android:id="@+id/lv_salaried_company_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/v_salaried_gray"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_pending_company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginTop="10dp"
                >
                <View
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="15dp"
                    android:id="@+id/v_pending_blue"
                    android:layout_width="4dp"
                    android:layout_height="20dp"
                    android:background="@color/main_color"
                    />
                <TextView
                    android:id="@+id/tv_pending_company_type"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="单位待审核"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical"
                    android:layout_toRightOf="@+id/v_pending_blue"
                    android:layout_alignTop="@+id/v_pending_blue"
                    android:textColor="@color/gray_text"
                    android:textSize="12sp"
                    />
                <View
                    android:id="@+id/v_pending_gray"
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:background="@color/gray_light"
                    android:layout_below="@id/v_pending_blue"
                    android:layout_marginTop="10dp"
                    />
                <ListView
                    android:id="@+id/lv_pending_company_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/v_pending_gray"
                    />
            </RelativeLayout>
        </LinearLayout>
    </android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>
