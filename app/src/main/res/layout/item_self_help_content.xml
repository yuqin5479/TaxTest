<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        >
        <ImageView
            android:id="@+id/iv_topic"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/c_question"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            />
        <TextView
            android:id="@+id/tv_topic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_text"
            android:textSize="15sp"
            android:text="什么时候开始正式缴税?什么时候开始正式缴税什么时候开始正式缴税什么时候开始正式缴税什么时候开始正式缴税"
            android:layout_toRightOf="@+id/iv_topic"
            android:layout_alignTop="@+id/iv_topic"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            />
        <ImageView
            android:id="@+id/iv_answer"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/c_answer"
            android:layout_alignLeft="@+id/iv_topic"
            android:layout_below="@+id/tv_topic"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/tv_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_text"
            android:textSize="15sp"
            android:text="2018年6月19日，个人所得税法修正案草案2018年6月19日，个人所得税法修正案草案2018年6月19日，个人所得税法修正案草案2018年6月19日，个人所得税法修正案草案2018年6月19日，个人所得税法修正案草案"
            android:layout_toRightOf="@+id/iv_answer"
            android:layout_alignTop="@+id/iv_answer"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray_light"
            android:layout_alignLeft="@id/iv_answer"
            android:layout_below="@id/tv_answer"
            android:layout_marginTop="15dp"
            />
    </RelativeLayout>
</LinearLayout>
